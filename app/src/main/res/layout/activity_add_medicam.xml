<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addMedical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="150pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Medicam Name"
            android:inputType="textPersonName"
            android:padding="10dp" />


        <EditText
            android:id="@+id/dose"
            android:layout_width="150pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Complete Dose"
            android:inputType="numberDecimal"
            android:padding="10dp"  />



        <LinearLayout
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:layout_marginStart="13pt"
            android:layout_marginLeft="13pt"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15pt"
                android:layout_marginLeft="15pt"
                android:layout_weight="1"
                android:text="Regles de Dose:" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15pt"
                android:layout_marginLeft="15pt"
                android:layout_weight="1"
                android:text="regles de la clairance renale:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13pt"
                android:layout_marginLeft="13pt"
                android:layout_weight="0"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/clairanceMin"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="MIN"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/clairanceMax"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="Max"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textViewBilirubine"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15pt"
                android:layout_marginLeft="15pt"
                android:layout_weight="1"
                android:text="regles de la Bilirubine:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13pt"
                android:layout_marginLeft="13pt"
                android:layout_weight="0"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/biliMin"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="MIN"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/biliMax"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="MAX"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textViewTgoTga"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15pt"
                android:layout_marginLeft="15pt"
                android:layout_weight="1"
                android:text="regles de la TGO/TGA:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13pt"
                android:layout_marginLeft="13pt"
                android:layout_weight="0"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tgotgaMin"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="MIN"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/tgotgaMax"
                    android:layout_width="65dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="MAX"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddMedicam"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg"
        android:text="Add New Medicament"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"/>
</LinearLayout>